@import url('https://fonts.googleapis.com/css?family=Roboto+Slab:400,700')

.page
    font-family 'Roboto Slab', serif
    font-weight 400
    box-sizing border-box

.wrapper
    display flex
    align-items center
    justify-content space-between
    flex-direction column
    perspective 1000px
    position relative
    min-height 100%
    min-width 100%
    box-sizing border-box
    padding 10px 5px
    background-color #ddd
    background-image linear-gradient(45deg, rgba(255, 165, 150, 0.5) 5%, rgba(0, 228, 255, 0.35))
    background-repeat no-repeat
    background-size cover
    background-position center center
    background-attachment fixed

.page_loading
    .card
        opacity 0
        transform rotateX(20deg)
    .loader
        opacity .8

.loader
    position absolute
    top 50%
    left 50%
    width 30px
    height 30px
    border-radius 30px
    margin -15px 0px 0px -15px
    opacity 0
    z-index 1000
    transition opacity .2s ease
    background-color #fff
    animation loader 1s infinite linear
    border 4px solid transparent
    border-top-color #fc0
    border-left-color #fc0
    box-shadow 0px 0px 0px 8px #fff

@keyframes loader
    0%
        transform rotate(0)

    100%
        transform rotate(360deg)

.card
    opacity .89
    box-sizing border-box
    position relative
    max-width 100%
    min-width 300px
    padding 30px 10px 45px 10px
    background #fff
    border-radius 7px
    transform-origin 50% 50%
    transform rotateX(0deg)
    transition opacity 1.5s ease, transform 1s ease
    align-self center
    margin auto
    text-align center
    border 1px solid rgba(0,0,0,.02)
    box-shadow 0px 0px 1px 0px rgba(0,0,0,.05)
    transition-delay .25s
    
    &__container
        width 100%
        height 100%

    &__title
        font-size 25px
        line-height 1.1em
        font-weight 700
        margin-bottom 15px
        
    &__phone
        font-size 18px
        line-height 1.1em
        margin-bottom 10px
        font-weight 700

    &__maps
        font-size 13px
        line-height 1.1em
        font-weight 700
        margin-top 10px
        
.form
    margin 0px auto 0px auto
    text-overflow clip
    text-align left
    // padding 5px
    // background #fc0
    display table
    
    &:after
        content: ''
        display table
        clear both

    &__input
        width 138px
        box-sizing border-box
        border-top 1px
        border-bottom 1px
        border-left 1px
        border-right 0px
        border-style solid 
        border-color #dbdbdb
        // border 0 solid transparent
        border-top-left-radius 4px
        border-bottom-left-radius 4px
        color #000
        font-size 14px
        padding 0px 8px
        height 30px
        -webkit-appearance none 
        outline none
        float left

    &__btn
        background #384588
        font-size 14px
        line-height 30px
        height 30px
        padding 0px 8px
        box-sizing border-box
        display inline-block
        float left
        cursor pointer
        font-weight 700
        color #fff
        border-top-right-radius 4px
        border-bottom-right-radius 4px
    
    &__title
        text-align center
        font-size 15px
        line-height 1.2em
        font-weight 700
        margin-bottom 10px
    
.hr
    height 1px
    width 100%
    margin 30px 0px   
    background #dbdbdb        

placeholder = #888
.input::-webkit-input-placeholder
    color placeholder
.input::-moz-placeholder
    color placeholder
.input:-moz-placeholder
    color placeholder
.input:-ms-input-placeholder
    color placeholder
    